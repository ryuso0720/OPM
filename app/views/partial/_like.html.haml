- if user_signed_in?
  - if !Like.exists?(user_id:current_user.id,article_id:@article.id)
    = button_to article_likes_path(@article), class:'article-button-like',method: :post, remote: true do
      %i.fa.fa-heart.vertical-like__red-icon いいね！
      .like-count
        = @article.likes.count
  - else
    = button_to article_like_path(@article, current_user.likes.find_by(article_id: @article.id)), class:'article-button-like',method: :delete, remote: true do
      %i.fa.fa-heart.vertical-like__red-icon  いいねを取り消す
      .like-count
        = @article.likes.count
- else
  %p.like-count-only
    %span いいね！数:
    = @article.likes.count
